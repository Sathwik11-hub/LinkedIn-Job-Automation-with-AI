# AutoAgentHire Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME=AutoAgentHire
APP_VERSION=1.0.0
DEBUG=false
HOST=0.0.0.0
PORT=8000

# LinkedIn Credentials (REQUIRED for automation)
LINKEDIN_EMAIL=your_email@example.com
LINKEDIN_PASSWORD=your_linkedin_password

# OpenAI API Configuration (REQUIRED for AI features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Database Configuration
DATABASE_URL=sqlite:///./jobs.db

# Vector Store Configuration
VECTOR_STORE_PATH=./vector_store
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Automation Settings
HEADLESS_BROWSER=true
AUTOMATION_DELAY=2.0
MAX_APPLICATIONS_PER_DAY=50

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=autoagenthire.log

# Security Settings (Optional)
SECRET_KEY=your_secret_key_here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Additional API Keys (Optional)
# ANTHROPIC_API_KEY=your_anthropic_key
# HUGGINGFACE_API_KEY=your_huggingface_key