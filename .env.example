# Application Settings
APP_NAME=AutoAgentHire
APP_ENV=development
DEBUG=True
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/autoagenthire
SYNC_DATABASE_URL=postgresql://user:password@localhost:5432/autoagenthire

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Vector Database
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIRECTORY=./vector_db/data

# Alternative: Pinecone
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment
PINECONE_INDEX_NAME=autoagenthire

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Alternative LLM: Anthropic Claude
ANTHROPIC_API_KEY=your-anthropic-api-key

# Alternative LLM: Local Llama
LLAMA_MODEL_PATH=/path/to/llama/model

# CrewAI Configuration
CREWAI_TELEMETRY=false

# LinkedIn Credentials (Encrypted in database)
# These are for reference only - actual credentials stored encrypted
LINKEDIN_EMAIL=your-linkedin-email@example.com
LINKEDIN_PASSWORD=your-linkedin-password

# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

LINKEDIN_OAUTH_CLIENT_ID=your-linkedin-client-id
LINKEDIN_OAUTH_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_OAUTH_REDIRECT_URI=http://localhost:8000/auth/linkedin/callback

# Web Automation
SELENIUM_HEADLESS=True
SELENIUM_IMPLICIT_WAIT=10
PLAYWRIGHT_HEADLESS=True
PLAYWRIGHT_TIMEOUT=30000# Gemini AI
GEMINI_API_KEY=your_actual_gemini_api_key

# LinkedIn credentials  
LINKEDIN_EMAIL=your_email@example.com
LINKEDIN_PASSWORD=your_password

# Proxy Configuration (Optional)
USE_PROXY=False
PROXY_URL=http://proxy-server:port

# Email Configuration
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@autoagenthire.com
NOTIFICATION_EMAIL=admin@autoagenthire.com

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Job Search Configuration
MAX_JOBS_PER_SEARCH=100
SEARCH_DELAY_SECONDS=2
MAX_APPLICATIONS_PER_DAY=10

# Feature Flags
ENABLE_AUTO_APPLY=False
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_DAILY_REPORTS=True

# Monitoring
SENTRY_DSN=your-sentry-dsn
ENABLE_METRICS=True
METRICS_PORT=9090

# Encryption
ENCRYPTION_KEY=your-fernet-encryption-key

# Frontend
STREAMLIT_PORT=8501
REACT_APP_API_URL=http://localhost:8000

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_RESUME_EXTENSIONS=pdf,docx,txt

# Logging
LOG_FILE_PATH=data/logs/app.log
LOG_ROTATION=10 MB
LOG_RETENTION=30 days
