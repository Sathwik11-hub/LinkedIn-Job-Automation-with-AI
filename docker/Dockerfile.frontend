# Frontend Dockerfile (Streamlit)
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir streamlit plotly pandas requests

# Copy frontend code
COPY frontend/streamlit/ ./frontend/streamlit/

# Expose Streamlit port
EXPOSE 8501

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8501/_stcore/health || exit 1

# Run Streamlit
CMD ["streamlit", "run", "frontend/streamlit/app.py", "--server.port=8501", "--server.address=0.0.0.0"]
